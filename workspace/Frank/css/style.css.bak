* {font-family: "Comic Sans MS", cursive, sans-serif;
}

body{
	margin: 0 auto;
	width: 100%;
}
@font-face {
 font-family: "AR HERMANN", sans-serif;
  src: url(../Jason/js/ARHERMANN.ttf);
}
#sun{
	
    position: absolute;
    margin-left: 15%;
    top: 0;
    width: 80%;
    height: auto;
    opacity: 0.15;
    z-index: -1;
}	
	


header{
	width: 100%;
	height: 85px;
	margin: 0 auto;
	background: #408000;
	position: fixed;
	top: 0;
	border-bottom: 5px solid #b7c996;
	font-family:"Comic Sans MS", cursive, sans-serif;
	z-index: 1;
	padding-top: 15px;
	padding-bottom: 25px;
}

h1 {
  font-family:"AR HERMANN", sans-serif;
  padding-top: 0;
  font-style: narrow;
  font-size: 80px;
  color: #ffffcc;
  Margin: 0;
  padding: 0;
  padding-bottom: 20px;
  text-align: center;
  

}	
	

#nav_bar ul{
	list-style-type: none;
	height: 100%;
	overflow: auto;
	position: fixed;
	margin: 128px 0 0 0;
	padding: 0;
	
}
	

#nav_bar a {
	display: block;
    color: #ffffcc;
    background-color: #cc7a00;
    height: auto;
    width: 45%;
    padding: 13% 2.5em;
    text-align: center;
    font-weight: bold;
    text-transform: uppercase;
}
a:link {
    text-decoration: none;
}
#nav_bar li a:hover {
    background-color: #e68a00;
    color: #f0dcdf;
}
	/*changed the position to relative*/
#m1{
	float: left;
	vertical-align: middle;
	padding-right: 5%;
	margin-top:  1em;
}

